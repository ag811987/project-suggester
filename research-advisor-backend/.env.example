# Research Pivot Advisor System - Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Research Pivot Advisor System"
APP_VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Settings (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/research_advisor

# Redis Settings (Session Storage)
REDIS_URL=redis://localhost:6379/0
SESSION_TTL_SECONDS=3600

# OpenAI Settings (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-0125-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# OpenAlex Settings (REQUIRED)
OPENALEX_EMAIL=your_email@example.com
OPENALEX_PER_PAGE=20

# Oxylabs Settings (Optional - for web scraping)
OXYLABS_USERNAME=
OXYLABS_PASSWORD=
SCRAPING_USE_OXYLABS=false

# Background Job Settings
SCRAPER_SCHEDULE_CRON=0 2 * * *
SCRAPER_ENABLED=true

# Privacy & Security Settings
DELETE_USER_DATA_ON_EXPIRY=true
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,txt

# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual API keys and credentials
# 3. Never commit .env to version control (already in .gitignore)
# 4. For production, use environment-specific values
